</head>
<body>
    <div class="login">
        <span><img src="~/images/logo.png" alt="" /></span>
        <div class='buttons' style="width:10em;height:27px;position:absolute;right:0px;top:0px;">
            @using (Html.BeginForm("Logout", "Student", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <button name="button" type="submit" value="Logout" style="background-color:crimson;" class="btn btn-login">Logout</button>
            }
        </div>
        <div class="welcome-name">
            <h1>Welcome @Model.student.FirstName</h1>
        </div>

        <table class="table-fill">
            <div class="table-title">
                <h3>Course Schedule</h3>
            </div>
            <tr>
                <th>Course Name</th>
                <th>Day</th>
                <th>Hour</th>
            </tr>
            @foreach (Courses obj in Model.courses)
            {
                <tr>
                    <td>@obj.CourseName</td>
                    <td>@obj.Day</td>
                    <td>@obj.Hour</td>
                </tr>
            }
        </table>

        <table class="table-fill">

            <div class="table-title">
                <h3>Exam Schedule</h3>
            </div>

            <tr>
                <th>Course Name</th>
                <th>Moed A</th>
                <th>Moed B</th>
                <th>Grade</th>
            </tr>
            @for (int i = 0; i < Model.courses.Count; i++)
            {
                <tr>
                    <td>@Model.courses[i].CourseName</td>
                    <td>@Model.courses[i].MoedA</td>
                    <td>@Model.courses[i].MoedB</td>
                    <td>@Model.studentCourses[i].Grade</td>
                </tr>
            }
        </table>
    </div>
    <br />
    <br />
    <br />
    <br />
</body>


